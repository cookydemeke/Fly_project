<h2>All Employees</h2>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="allusers">
        <td id="s_u"><%= link_to user[:firstname], "/select_user/#{user[:id]}", remote: true %></td>
        <td><%= link_to 'Show', user %></td>
        <% if current_user[:id] == user[:id]%>
          <td><%= link_to 'Edit', edit_user_registration_path %></td>
          <td><%= link_to 'Destroy', user_registration_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


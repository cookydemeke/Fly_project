<%= form_with(model: airplane, local: true) do |form| %>
  <% if airplane.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(airplane.errors.count, "error") %> prohibited this airplane from being saved:</h2>
      <ul>
      <% airplane.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="actions">
    Name: <%= form.text_field :plane_name %><br>
    Capacity: <%= form.number_field :capacity %> (in kgs)<br>
    <%= form.collection_select :photo_id, Photo.order(:title), :id, :title, include_blank: "Select Plane" %><br>
    <%= form.collection_select :airport_id, Airport.order(:city_code), :id, :city_code, include_blank: "Select Airport" %><br>
    <%= form.hidden_field :user_id, value: current_user[:id] %><br>
    <%= form.submit "Submit" %>
  </div>

<% end %>
